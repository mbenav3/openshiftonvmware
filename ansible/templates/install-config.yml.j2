apiVersion: v1
baseDomain: {{dns.domain}}
compute:
- hyperthreading: Enabled
  name: worker
  replicas: 0
controlPlane:
  hyperthreading: Enabled
  name: master
  replicas: {{masters|length}}
metadata:
  name: {{dns.clusterid}}
networking:
  clusterNetworks:
  - cidr: 10.254.0.0/16
    hostPrefix: 24
  networkType: OpenShiftSDN
  serviceNetwork:
  - 172.30.0.0/16
platform:
  none: {}
pullSecret: '{{pullSecretOCP | to_json}}'
sshKey: '{{sshKeyOCP}}'
